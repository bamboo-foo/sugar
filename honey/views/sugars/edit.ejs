<%- include('../partials/header') %>
<link rel="stylesheet" href="/stylesheets/main.css" />
<link rel="stylesheet" href="/stylesheets/new.css" />

<section>
  <h3><%= title %></h3>
  <form action="" method="POST">
    <div class="col">
      <label for="">Blood sugar reading value:</label>
      <input
        type="text"
        name="reading"
        value="<%= sugar.reading %>"
        id="reading"
      />
    </div>
    <!-- TODO: [HON-20] add a switch at top, and relates with the plus button that if pushed this label should change to were not was -->
    <div class="col">
      <label for="">What units was the reading taken with?</label>
      <select name="units" id="units" value="<%= sugar.units %>">
        <option value="mmol/L">mmol/L</option>
        <option value="mg/dL">mg/dL</option>
      </select>
    </div>
    <div class="col">
      <label for="">Reading with respect to meals:</label>
      <select
        name="readingType"
        id="readingType"
        value="<%= sugar.readingType %>"
      >
        <option value="pre-meal">pre-meal</option>
        <option value="post-meal">post-meal</option>
        <option value="fasting">fasting</option>
      </select>
    </div>
    <div class="col">
      <label for="">When was the reading taken?</label>
      <!-- TODO: [HON-21] can we have a button for now? to auto set the datetime to now? -->
      <input
        type="date"
        name="takenAtDate"
        id="takenAtDate"
        value="<%= sugar.takenAtDate %>"
      />
    </div>
    <div class="col">
      <label for="time">Time:</label>
      <input
        type="time"
        name="takenAtTime"
        id="takenAtTime"
        value="<%= sugar.takenAtTime %>"
      />
    </div>
    <div class="col" id="submit">Submit</div>
    <!-- <button type="submit">Submit</button> -->
    <!-- <button>+</button> -->
  </form>
</section>
<script src="/javascripts/today-date.js"></script>
<script src="/javascripts/edit-preselect.js"></script>
<script src="/javascripts/submit.js"></script>
<%- include('../partials/footer') %>
